<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id='error-explanation'>
      <h2>
        <%= pluralize(@page.errors.count, 'error') %> prohibited this page from being saved:
      </h2>
      <ul>
        <% @page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :slug %>

  <div class='form-field'>
    <%= f.text_field :title, placeholder: 'Title' %>
