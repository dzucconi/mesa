<%= form_for [@namespace, @page], html: {
  class: 'js-form', data: { upload: @page.persisted? ? namespace_page_uploads_path(@namespace, @page) : '' }
} do |f| %>
  <%= render 'common/errors', resource: @page %>

  <%= f.hidden_field :slug %>

  <%= f.text_field :title, placeholder: 'Title', autofocus: !@page.persisted? %>

  <% if @page.persisted? %>
    <%= f.text_area :content, placeholder: 'Page Content', rows: 20, autofocus: @page.persisted?, class: 'js-editor' %>
  <% end %>

  <%= f.submit 'Save', class: 'is-fixed' %>
<% end %>
