<% content_for(:title) { "Editing #{@namespace} / #{@page}" } %>

<% content_for :breadcrumb do %>
  <%= link_to 'Root', :root %>
  <%= link_to @namespace, @namespace %>
  <%= link_to @page, namespace_page_path(@namespace, @page) %>
  <%= content_tag :span, "Editing #{@page}" %>
<% end %>

<% content_for :actions do %>
  <%= link_to 'Versions', namespace_page_versions_path(@namespace, @page) %>
  <%= link_to 'Delete', [@namespace, @page], method: :delete, data: { confirm: 'Are you sure?' }, class: 'is-dangerous' %>
<% end %>

<%= render 'form' %>
